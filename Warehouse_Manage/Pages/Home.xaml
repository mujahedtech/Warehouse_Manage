<UserControl x:Class="Warehouse_Manage.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Warehouse_Manage.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Visibility="Visible" Background="{StaticResource MainColor}" Name="maingrid">
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever">
                        <DoubleAnimation
                                
                                Storyboard.TargetName="maingrid" 
                                Storyboard.TargetProperty="Width"
                                From="700" To="800" Duration="0:0:1"
                                AutoReverse="True"
                                />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
        <Image Visibility="Visible" Source="pack://application:,,,/Resources/Main Logo Transparent.png" Stretch="Uniform"  />

    </Grid>
</UserControl>
